generator client {
    provider = "prisma-client-js"
}

datasource db {
    provider = "postgresql"
    url = env("DATABASE_URL")
}

enum TaskStatus {
    TODO
    IN_PROGRESS
    DONE
    BLOCKED
}

model Task {
    id String @id @default(cuid())
    title String
    status TaskStatus @default(TODO)
    dueDate DateTime?
    createdAt DateTime @default(now())
    updatedAt DateTime @updatedAt
}